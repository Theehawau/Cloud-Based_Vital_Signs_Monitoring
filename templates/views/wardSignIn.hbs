<h3 id="ward">Hospital Ward Monitoring System</h3>
<form action="/ward/users" method="POST">
    <div class="form-group">
        <label for="exampleInputName"> Device Name</label>
        <input name="deviceId" type="name" class="form-control" id="exampleInputName" aria-describedby="nameHelp"
            placeholder="Enter Device Name">
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Email address</label>
        <input name="email" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
            placeholder="Enter email">
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
   
    <div class="form-group">
        <label for="exampleInputPassword1">Password</label>
        <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" name="password">
    </div>
    <div class="form-group">
        <br>
        <button type="submit" class="btn btn-primary">Sign In</button>
    </div>

</form>
{{>footer}}